<Window x:Class="MathematicalExpressionCalculator.EditAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathematicalExpressionCalculator"
        mc:Ignorable="d"
        Title="变量赋值" Height="200" Width="400">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="okBtn" Margin="8" Padding="16,8" Click="OkBtn_Click" IsDefault="True">确定</Button>
            <Button x:Name="cancelBtn" Margin="8" Padding="16,8" IsCancel="True" Click="CancelBtn_Click">取消</Button>
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Content="变量名" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <Label Content="变量值" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1"/>
            <TextBox x:Name="syNameTextBox" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch" Grid.Column="1" Margin="8" VerticalContentAlignment="Center"/>
            <TextBox x:Name="syValueTextBox" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1" Margin="8" VerticalContentAlignment="Center"/>

        </Grid>
    </DockPanel>
</Window>
